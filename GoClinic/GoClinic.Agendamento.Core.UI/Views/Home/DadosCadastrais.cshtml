@model Goclinic.Core.Business.Paciente

@{
    ViewData["Title"] = "Dados Cadastrais";
}
<br />
<div class="table-responsive">
    <div>
        <div class="row">
            <form asp-action="DadosCadastrais">
                
                    <div class="row">

                        <div class="form-group col s10">
                            <div class="input-field">
                                <label asp-for="Nome" class="control-label"></label>
                                <input asp-for="Nome" class="form-control" />
                                <span asp-validation-for="Nome" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group col s1">
                            <div class="input-field">
                                <label asp-for="Sexo" class="control-label"></label>
                                <input asp-for="Sexo" class="form-control" />
                                <span asp-validation-for="Sexo" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group col s2">
                            <div class="input-field">
                                <label asp-for="Cpf" class="control-label"></label>
                                <input asp-for="Cpf" class="form-control" />
                                <span asp-validation-for="Cpf" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group col s2">
                            <div class="input-field">
                                <label asp-for="DataNascimento" class="control-label"></label>
                                <input asp-for="DataNascimento" class="form-control datepicker" />
                                <span asp-validation-for="DataNascimento" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group col s2">
                            <div class="input-field">
                                <label asp-for="Celular" class="control-label"></label>
                                <input asp-for="Celular" class="form-control" />
                                <span asp-validation-for="Celular" class="text-danger"></span>
                            </div>
                        </div>


                    </div>

                    <div class="row">
                        <div class="form-group col s10">
                            <div class="input-field">
                                <label asp-for="Endereco" class="control-label"></label>
                                <input asp-for="Endereco" class="form-control" />
                                <span asp-validation-for="Endereco" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group col s2">
                            <div class="input-field">
                                <label asp-for="Numero" class="control-label"></label>
                                <input asp-for="Numero" class="form-control" />
                                <span asp-validation-for="Numero" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group col s4">
                            <div class="input-field">
                                <label asp-for="Cep" class="control-label"></label>
                                <input asp-for="Cep" class="form-control" />
                                <span asp-validation-for="Cep" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group col s4">
                            <div class="input-field">
                                <label asp-for="Estado" class="control-label"></label>
                                <input asp-for="Estado" class="form-control" />
                                <span asp-validation-for="Estado" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group col s4">
                            <div class="input-field">
                                <label asp-for="Cidade" class="control-label"></label>
                                <input asp-for="Cidade" class="form-control" />
                                <span asp-validation-for="Cidade" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group col s12">
                        <input type="submit" value="Salvar" class="btn-small" />
                        <a asp-action="Index" class="btn-small blue darken-3">Voltar</a>
                    </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}